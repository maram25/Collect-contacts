<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#99000000"

    android:id="@+id/suesses_sms_popup"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_18ssp"
        android:background="@drawable/curved_solid_main_color"
        android:backgroundTint="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_30ssp"
        android:paddingRight="@dimen/_15ssp"
        android:paddingLeft="@dimen/_15ssp"
        android:paddingTop="@dimen/_30ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="22dp">




        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/_25ssp"
            android:layout_height="@dimen/_25ssp"
            android:layout_gravity="center"
            android:src="@drawable/close"
            android:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseAppTint" />



        <LinearLayout
            android:id="@+id/Date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:layout_margin="@dimen/_10ssp"
            android:layout_weight="2"
            android:background="@drawable/curved_solid_main_color"
            android:backgroundTint="@color/light_gray"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="  Send SMS for 100 contact user"
               android:textColor="@color/black"
               android:textSize="@dimen/_12ssp"
               android:padding="@dimen/_2ssp"
               android:gravity="center_vertical"
               android:layout_weight="1"
               />

           <TextView
               android:id="@+id/bill_reference"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:text="5"
               android:visibility="gone"
               android:textColor="@color/black"
               android:textSize="@dimen/_12ssp"
               android:layout_weight="1"
               >

           </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp"
            android:layout_margin="@dimen/_10ssp"
            android:layout_weight="3"
            android:background="@drawable/curved_solid_main_color"
            android:backgroundTint="@color/light_gray"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Date">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/black"
                android:padding="@dimen/_2ssp"
                android:textSize="@dimen/_12ssp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/TotalPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_weight="1"
                >

            </TextView>


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>